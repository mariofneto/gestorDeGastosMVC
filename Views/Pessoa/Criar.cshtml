@model gestorDeGastosMVC.Models.Pessoa

@{
    ViewData["Title"] = "Criar Pessoa";
}
<h1>
    Criando seu Apelido
</h1>
<br>
<div>
    <form asp-action="Criar">
        <div class="col-md-3">
            <label asp-for="Nome" class="control-label">Seu Apelido</label>
            <input asp-for="Nome" class="form-control" placeholder="Ex: Marin">
        </div>
        <p>*o Apelido será usado para visualização de seus dados</p>
        <div>
            <input type="submit" value="Criar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </form>
</div>
