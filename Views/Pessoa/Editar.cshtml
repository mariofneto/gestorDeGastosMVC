@model gestorDeGastosMVC.Models.Pessoa

@{
    ViewData["Title"] = "Editar";
}

<div>
    <form asp-action="Editar">
        <div class="col-md-3">
            <label asp-for="Nome" class="control-label">Apelido antigo</label>
            <input asp-for="Nome" class="form-control" placeholder="Ex: Marin">
        </div>
        <div class="col-md-3">
            <label asp-for="Nome" class="control-label">Apelido novo</label>
            <input asp-for="Nome" class="form-control" placeholder="Ex: Marin2">
        </div>
        <br>
        <div>
            <input type="submit" value="Editar" class="btn btn-warning" />
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </form>
</div>
